<main>
    <form id="add_user" action="/api/users" method="post">
        <div class="cuadro">
            <div class="form-title">
                <h2 class="text-dark">Usuarios</h2>
                <span class="text-secund">Listado completo de usuarios registrados</span>
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">ID</label>
                <input type="text" id="userid" class="form-control" readonly placeholder="ID" >
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">Name</label>
                <input type="text" id="username" name="name" class="form-control" placeholder="Mark Stoenis" >
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">Email</label>
                <input type="text" id="useremail" name="email" class="form-control" placeholder="example@gmail.com" >
            </div>
    
            <div class="form-radio" style="display: flex; align-items: center;">
                <label class="form-text">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-1" name="gender" value="Male">
                    <label for="radio-1"  class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Female">
                    <label for="radio-2" class="radio-label">Female</label>
                </div>
            </div>
    
            <div class="form-radio" style="display: flex; align-items: center;">
                <label for="Gender" class="form-text">Civil Status</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Single">
                    <label for="radio-4" class="radio-label">Single</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Divorced">
                    <label for="radio-5" class="radio-label">Divorced</label>
                </div>
            </div>
        </div>
        <div class="botones">
            <button action="/api/users" method="POST" type="submit" class="btn btn-success" id="btn-create">Create</button>
            <button type="button" class="btn btn-primary">Read</button>
            <button type="button" class="btn btn-warning">Update</button>
            <button type="button" class="btn btn-danger">Delete All</button>
        </div>
    
        <div class="container d-flex">
            <table class="table table-striped table-hover">
                <!-- <caption>List of users</caption> -->
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody class="tbody" id="tbody">
                  
                    <%- include('include/_show') %>
                 
                </tbody>
            </table> 
        </div>
    
        
        
        <div class="container text-center">
            <div id="notfound"></div>
        </div>
    </form>
</main>

