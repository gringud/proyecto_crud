<main id="site-main">
    <form method="POST" id="update_user" >
        <div class="cuadro">
            <div class="form-title">
                <h2 class="text-dark">Usuarios</h2>
                <span class="text-secund">Listado completo de usuarios registrados</span>
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">ID</label>
                <input type="text" id="userid" name="id" class="form-control" value="<%= user._id %>" readonly placeholder="ID" >
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">Name</label>
                <input type="text" id="username" name="name" value="<%= user.name%>" class="form-control" placeholder="Mark Stoenis" >
            </div>
    
            <div class="form-group">
                <label class="form-text" for="name">Email</label>
                <input type="text" id="useremail" name="email" value="<%= user.email %>" class="form-control" placeholder="example@gmail.com" >
            </div>
    
            <div class="form-radio" style="display: flex; align-items: center;">
                <label class="form-text">Gender</label>
                <div class="radio inline">
                    <input type="radio" id="radio-1" name="gender" value="Male"<%= user.gender == 'Male'?'checked':'' %>>
                    <label for="radio-1"  class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Female"<%= user.gender == 'Female'?'checked':'' %>>
                    <label for="radio-2" class="radio-label">Female</label>
                </div>
            </div>
    
            <div class="form-radio" style="display: flex; align-items: center;">
                <label for="Gender" class="form-text">Civil Status</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Single" <%= user.status == 'Single'?'checked':'' %>>
                    <label for="radio-4" class="radio-label">Single</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Divorced" <%= user.status == 'Divorced'?'checked':'' %>>
                    <label for="radio-5" class="radio-label">Divorced</label>
                </div>
            </div>
        </div>
        <div class="botones">
            
            <button type="submit" class="btn btn-primary"><a href="/">Read</a> </button>
            <button action="/api/users/:<%= user._id %>" method="PUT" type="submit" class="btn btn-warning">Update</button>
            
        </div>
    
        <div class="container d-flex">
            <table class="table table-striped table-hover">
                <!-- <caption>List of users</caption> -->
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody class="tbody" id="tbody">
                  
                    
                 
                </tbody>
            </table> 
        </div>
    
        
        
        <div class="container text-center">
            <div id="notfound"></div>
        </div>
    </form>
</main>

